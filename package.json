{
  "name": "vaipp-ws",
  "version": "1.0.0",
  "description": "Visual analytics in participatory processes - WebSockets",
  "author": "Lars Sch√ºtz (https://github.com/laschuet)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec babel-node src/server.js",
    "dist": "babel src --out-dir dist",
    "lint": "eslint --ext .js .",
    "lint-fix": "eslint --fix --ext .js .",
    "prettier": "prettier --single-quote --trailing-comma all \"src/**/*.js\"",
    "prettier-fix": "prettier --single-quote --trailing-comma all --write \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/laschuet/vaipp-ws.git"
  },
  "bugs": {
    "url": "https://github.com/laschuet/vaipp-ws/issues"
  },
  "homepage": "https://github.com/laschuet/vaipp-ws",
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.1",
    "eslint-config-fbjs-opensource": "^2.0.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "express": "^4.17.1",
    "ws": "^7.3.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "fbjs-opensource",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "babel/no-await-in-loop": "off",
      "no-await-in-loop": "error",
      "prettier/prettier": "error"
    }
  },
  "eslintIgnore": [
    "**/nodes_modules",
    "dist/"
  ],
  "prettier": {
    "parser": "babel",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
